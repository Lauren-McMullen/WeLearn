<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_path"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/GreenBlob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/green_blob" />

        <ImageView
            android:id="@+id/chalkboard"
            android:layout_width="163dp"
            android:layout_height="218dp"
            android:layout_marginTop="100dp"
            app:layout_constraintEnd_toEndOf="@+id/GreenBlob"
            app:layout_constraintTop_toTopOf="@+id/GreenBlob"
            app:srcCompat="@drawable/black_board_svgrepo_com_1" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="120dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/GreenBlob"
            app:srcCompat="@drawable/books" />

        <ImageView
            android:id="@+id/duckie"
            android:layout_width="176dp"
            android:layout_height="172dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="115dp"
            app:layout_constraintStart_toStartOf="@+id/GreenBlob"
            app:layout_constraintTop_toTopOf="@+id/GreenBlob"
            app:srcCompat="@drawable/duck_outlined" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/BadgeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="240dp"
        android:fontFamily="@font/porkh"
        android:text="@string/recent_badges"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome_back_header" />

    <HorizontalScrollView
        android:id="@+id/scrollView2"
        android:layout_width="413dp"
        android:layout_height="138dp"
        android:layout_marginTop="8dp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BadgeTitle">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/badge1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/green_badge" />

            <ImageView
                android:id="@+id/badge2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pink_badge" />

            <ImageView
                android:id="@+id/badge3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/blue_badge" />

            <ImageView
                android:id="@+id/badge4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/green_badge" />

            <ImageView
                android:id="@+id/badge5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pink_badge" />

            <ImageView
                android:id="@+id/badge6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/blue_badge" />

            <ImageView
                android:id="@+id/badge7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/green_badge" />

            <ImageView
                android:id="@+id/badge8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/pink_badge" />

            <ImageView
                android:id="@+id/badge9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toTopOf="@+id/Welcometext"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/blue_badge" />


        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/Welcome_back_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/welcome_back_header"
        android:fontFamily="@font/porkh"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/progress_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/pink"
            android:text="@string/view_my_progress"
            android:textColor="@color/black"
            android:fontFamily="@font/porkh"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/learn_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/learn_button"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/pink"
            android:text="@string/learn"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:fontFamily="@font/porkh"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toTopOf="@+id/teach_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

        <Button
            android:id="@+id/teach_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="@color/pink"
            android:text="@string/teach"
            android:fontFamily="@font/porkh"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:cornerRadius="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:strokeColor="@color/black"
            app:strokeWidth="1dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>